{
  "name": "pdf-quiz-frontend",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "pdf-lib": "^1.17.1",
    "@types/node": "^20.10.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:e2e": "playwright test --config=e2e/playwright.config.js",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.js --ui",
    "test:e2e:smoke": "playwright test --config=e2e/playwright.config.js e2e/tests/smoke.spec.js",
    "test:e2e:headed": "playwright test --config=e2e/playwright.config.js --headed",
    "test:e2e:debug": "playwright test --config=e2e/playwright.config.js --debug",
    "generate-test-pdf": "node scripts/generate-test-pdf.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5001"
}



